    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Debug",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path",
                    "${fileDirname}/../Cargo.toml"
                ]
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Rust: Build for release",
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path",
                    "${fileDirname}/../Cargo.toml",
                    "--release"
                ]
            }
        }
    ]
}